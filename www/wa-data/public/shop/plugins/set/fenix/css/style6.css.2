#shop-set-plugin-complect-block {
	border: 0px;
	padding:0px;
	margin: 50px 0;
	position: relative;
}

#shop-set-plugin-complect-block .set-item-name a, #shop-set-plugin-complect-block .set-product-name a {
	color: #656565;
}

#shop-set-plugin-complect-block .set-total-price {
	color: #f9981d;
}

#shop-set-plugin-complect-block .set-item-plus {
	color: #333;
	padding: 32px 20px;
}

#shop-set-plugin-complect-block .set-product-price b, #shop-set-plugin-complect-block .set-item-price b {
	color: #333;
}

#shop-set-plugin-complect-block .set-item-name a:hover, #shop-set-plugin-complect-block .set-product-name a:hover {
    color: #f9981d;
}

/*
.set-base-product {
	width:160px;
}
*/

#shop-set-plugin-complect-block .set {
	width: 100%;
}


#shop-set-plugin-complect-block .set:first-child {
	border-top: 0px;
}

/*
#shop-set-plugin-complect-block .set-item {
	width: 160px;
}
*/


#shop-set-plugin-complect-block button{
  background: #f9981d none repeat scroll 0 0;
  border: 1px solid rgba(255, 162, 0, 0.5);
  border-radius: 10px;
  color: #fff;
  font-size: 16px;
  height: 40px;
  line-height: 38px;
  margin: 10px 0 0;
  padding:0 5px;
}

#shop-set-plugin-complect-block .set-image {
	height:90px;
}


@media screen and (max-width: 1119px) { 
	.sku-sets {
		overflow:scroll;
	}

	#shop-set-plugin-complect-block .set-item-discount {
		right: 35%;
		top:0;
	}

	.set-product-price, .set-item-price {
		text-align:center;
	}

	.set-product-name, .set-item-name {
		text-align:center;
	}

	#shop-set-plugin-complect-block .set {
		display: block;

	}

	#shop-set-plugin-complect-block .set-total-price {
		padding:0px;
	}

	#shop-set-plugin-complect-block .set-item-plus {
		text-align: center;
		float:none;
		width:100%;
		padding:0px;
	}
	.set-base-product {
		float:none !important;
     		width: 100%;
  	}

	#shop-set-plugin-complect-block .set-item {
		float:none;
		width: 100%;
	}

	#shop-set-plugin-complect-block .set-result {
		float:none;
		text-align: center;
	}
}


